{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/phaser/types"
    ]
  }
}
